<div class="wrap-content" style="padding: 5px 10px;">
    <div class="wrap-chart">
        <div class="status-plc-system d-flex align-item-center my-1">
            <div class="system-status" style="margin-right: 50px;">
                <span id="label-system-status">System Status:</span>
                <span id="value-system-status">Running</span>
            </div>

            <div class="plc-status mb-2">
                <span id="label-plc-status">PLC Connect Status:</span>
                <span id="value-plc-status">Start</span>
            </div>
        </div>

        <div class="d-flex">
            <div class="d-flex flex-column" style="flex-basis: 50%">
                <div class="d-flex" style="margin-bottom: 5px;">
                    <div id="machine-1">
                        <div class="d-flex info">
                            <span class="" id="name-machine-1">Machine 1</span>
                            <span class="" id="status-connect-machine-1">
                                <i class="fa fa-dot-circle-o" aria-hidden="true"></i>
                                Connect
                            </span>
                        </div>
                        <h3>5.872</h3>
                        <span class="label-note">Inspection Quantity Total</span>
                        <div>
                            <canvas id="chart-machine-1" width="335" height="160"></canvas>
                        </div>
                    </div>
                    <div id="machine-2">
                        <div class="d-flex info">
                            <span class="" id="name-machine-2">Machine 1</span>
                            <span class="" id="status-connect-machine-2">
                                <i class="fa fa-dot-circle-o" aria-hidden="true"></i>
                                Connect
                            </span>
                        </div>
                        <h3>5.770</h3>
                        <span class="label-note">Inspection Quantity Total</span>
                        <div>
                            <canvas id="chart-machine-2" width="335" height="160"></canvas>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column" id="error-detect">
                    <div>
                        <h3>Error detect</h3>
                        <span>Total <b>30</b> detect</span>
                    </div>
                    <div>
                        <canvas id="chart-error-detect" style="width: 250px;"></canvas>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column" style="flex-basis: 50%">
                <div id="yield-today">
                    <h3>Yield Total</h3>
                    <span>In the last 7 days</span>
                    <div>
                        <canvas id="chart-yield-today" width="302" height="215" style="height: 225px;"></canvas>
                    </div>
                </div>
                <div id="defect-rate">
                    <h3>Defect Rate</h3>
                    <span>In the last 7 days</span>
                    <div>
                        <canvas id="chart-defect-rate" style="height: 238px !important;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="log">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 id="title-log">
                    Raw data
                </h3>
                @* <span style="color: #71717A;font-size: 15px;" class="d-block mt-1">Data is being statistically processed</span> *@
            </div>
            <div>
                <a href="" style="color: #237BFE;text-decoration: none;">Export Data &nbsp ></a>
            </div>
        </div>

        <div class="d-flex title-machine" style="margin: 10px 0px;">
            <h3 style="margin-right: 25rem">Machine</h3>
            <h3 style="margin-right: 31rem">Machine 1</h3>
            <h3>Machine 2</h3>
        </div>
        <div class="d-flex align-items-center title-percent-machine">
            <h4 style="margin-right: 15em;">Index</h4>

            <h5 class="mc1" style="margin-right: 90px;">Insp. Qty (EA)</h5>
            <h5 class="mc1" style="margin-right: 90px;">Fail Qty (EA)</h5>
            <h5 class="mc1" style="margin-right: 8em;">Fail Rate (%)</h5>

            <h5 class="mc2" style="margin-right: 90px;">Insp. Qty (EA)</h5>
            <h5 class="mc2" style="margin-right: 90px;">Fail Qty (EA)</h5>
            <h5 class="mc2">Fail Rate (%)</h5>
        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 18em">Total</th>
                        <th scope="col" style="width: 13em">150,000</th>
                        <th scope="col" style="width: 12em">5000</th>
                        <th scope="col" style="width: 13em">3.2</th>
                        <th scope="col" style="width: 12em">150,000</th>
                        <th scope="col" style="width: 12em">5000</th>
                        <th scope="col">3.2</th>

                    </tr>
                </thead>
                <tbody>
                    @for (var i = 1; i <= 4; i++)
                    {
                        <tr>
                            <td>May 09, 2024</td>
                            <td>7,000</td>
                            <td>200</td>
                            <td>3.5</td>
                            <td>9,000</td>
                            <td>35</td>
                            <td>4.2</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/chart.js"></script>
    <script src="~/js/chartjs-plugin-datalabels.min.js"></script>
    <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
    <script src="~/js/home.js"></script>
}